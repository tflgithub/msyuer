<view class="page">
  <swiper style="height:350rpx;margin-left:24rpx" indicator-dots="{{indicatorDots}}" bindchange="swiperChange" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{barItems}}" wx:for-item="item" wx:key="id">
      <swiper-item>
        <image src="{{item.url}}" style='width:100%;height:100%' bindtap='gotoDetail' data-id="{{item.id}}" />
      </swiper-item>
    </block>
  </swiper>

  <view class="line " style='margin-top:20rpx' />
  <view class="cell" style='margin-left:24rpx;margin-top:18rpx;margin-bottom:24rpx;'>
    <view class="weui-cell__hd">
      <image src="../../image/ic_recommended.png" style="vertical-align: middle;width:42rpx; height:42rpx; "></image>
    </view>
    <view class="weui-cell__bd ">{{mainItem.todayRecommend.title}}</view>
  </view>

  <view class="cell" style='margin-left:24rpx;margin-top:18rpx;'>
    <view class="card" wx:for="{{mainItem.todayRecommend.items}}" wx:for-item="item" wx:key="id">
      <view bindtap="gotoDetail" data-id="{{item.detailId}}">
        <image class="image" src="{{item.phoUrl}}" />
        <text class="nickname ">{{item.note}}</text>
        <view class="title ">{{item.title}}</view>
      </view>
    </view>
  </view>
<view class="line"/>
  <view class="vertical_layout" wx:for="{{mainItem.list}}" wx:for-item="item" wx:key="typeId">
    <view style='margin-left:24rpx;margin-top:18rpx;margin-bottom:24rpx;' class="cell" bindtap='getMore' data-id="{{item.typeId}}">
      <image src="../../image/ic_month.png " style="margin-right:10rpx;vertical-align: middle;width:42rpx; height:42rpx;" />
      <view class="weui-cell__bd">{{item.title}}</view>
      <image style="width:42rpx;height:42rpx;margin-right:24rpx;" src='../../image/ic_more.png' />
    </view>

    <view class="cell" style="margin-left:24rpx;margin-top:18rpx;margin-bottom:24rpx;">
      <view class="cell" wx:for="{{item.items}}" wx:for-item="item" wx:key="detailId">
        <view class="month-box" bindtap="gotoDetail" data-id="{{item.detailId}}">
          <image class="img" src="{{item.phoUrl}}" />
          <text class="text ">{{item.title}}</text>
        </view>
      </view>
    </view>
  </view>

</view>