/* pages/home.wxss */


.x-card {
  position: relative;
  display: inline-block;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  width: 416rpx;
  height: 619rpx;
}

.x-card .image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.x-card .mask{
  position: absolute;
  top: 0;
  background: linear-gradient(#FFFFFF, #000000);
  opacity: 0.4;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.x-card .desc {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  width: 100%;
}

.x-card .desc .teacher {
  display: inline-flex;
  align-items: center;
}

.x-card .desc .teacher .image {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
}

.x-card .desc .teacher .info {
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}

.x-card .desc .teacher .info .nickname {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 21rpx;
  color: white;
}

.x-card .desc .teacher .info .title {
  font-size: 21rpx;
  color: white;
}



.x-card .desc .text {
  color: #ffbd2d;
  font-size: 28rpx;
}

.item {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.navigator {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
}

.y-card {
  position: relative;
  margin-left: 33rpx;
  margin-right: 33rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}

.y-card .image {
  width: 690rpx;
  height: 416rpx;
  border-radius: 8rpx;
}

.y-card .mask{
  top:0;
  position: absolute;
  background: linear-gradient(#FFFFFF, #000000);
  opacity: 0.4;
  width: 690rpx;
  height: 416rpx;
  border-radius: 8rpx;
}

.y-card .desc {
  position: absolute;
  bottom: 68rpx;
  overflow-wrap: break-word;
}

.y-card .desc .image {
  width: 634rpx;
  height: 137rpx;
  margin-left: 20rpx;
}

.y-card .desc .text {
  display: flex;
  bottom: 35rpx;
  left: 50rpx;
  position: absolute;
  flex-direction: column;
}

.y-card .desc .bottom {
  justify-content: space-between;
  display: flex;
  width: 100%;
  position: absolute;
  flex-direction: row;
  bottom: -40rpx;
}
