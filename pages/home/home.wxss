/* pages/home.wxss */
@import "../../common/templates/worktemplate/workitem.wxss";

.swiper-block {
  height: 520rpx;
  width: 100%;
}

.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.slide-view {
  height: 424rpx;
  width:670rpx;
  margin-left: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0px 0px 5rpx rgba(0, 0, 0, 0.2);
  z-index: 1;
  background-color: rgba(255, 189, 45, 0.7) ;
}

.slide-view image {
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  height: 307rpx;
  width: 670rpx;
}

.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow: unset;
 
}

.work{
  /* display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content: center;
  overflow:hidden; */
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  padding-left:30rpx;
  padding-right: 30rpx;
  overflow-x:scroll;
  -webkit-overflow-scrolling : touch;
}
.course-view{
 display: flex;
 flex-direction: column;
 margin-left: 40rpx;
 margin-bottom: 40rpx;
}

.course-view image {
  border-radius: 24rpx;
  height: 347rpx;
  width: 670rpx;
  box-shadow: 0px 0px 5rpx rgba(0, 0, 0, 0.2);
}

.course-view .name {
  font-size: 28rpx;
  width: 670rpx;
  padding: 20rpx 0 0 0;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}