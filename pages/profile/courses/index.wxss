/* pages/profile/courses/index.wxss */

.item {
  position: relative;
  float: left;
  margin-left: 42rpx;
  }

.item .image {
  width: 315rpx;
  height: 189rpx;
  border-radius: 8rpx;
}

.item .teacher {
  display: flex;
  flex-direction: row;
}

.item .teacher .avatar {
  border-radius: 50%;
  height: 44rpx;
  width: 44rpx;
}

.item .teacher .name {
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #666666;
}

.item .text {
  font-size: 26rpx;
  color: #000000;
  padding-top:10rpx;
  padding-bottom: 10rpx;
}

.item .buttons {
  display:inline-flex;
}

.item  .buttons .left-button {
  width: 138rpx;
  font-size: 21rpx;
  border-color: #FFBD2D;
  color:  #FFBD2D;
  height: 52rpx;
  border-radius: 8rpx;
  vertical-align: middle;
}

.item .buttons .right-button {
  width: 138rpx;
  height: 52rpx;
  font-size: 21rpx;
  margin-left:30rpx;
  vertical-align:middle;
  border-radius: 8rpx;
  background-color: #FFBD2D;
}
