<template name="item_list">
  <navigator class='item' url='{{url}}'>
    <image src='{{icon}}' style='{{style}}' />
    <text class='text'>{{text}}</text>
  </navigator>
</template>

<view style='background-color:#F1F1F1;width:100%;height:100%' wx:if='{{mobile}}'>
  <view class="userinfo">
    <image src='../../image/ic_mine_bg.png' style='width:100%;height:287rpx'/>
    <view class="bg"/>
    <image class="avatar" src="{{avatarUrl}}" mode="cover" />
    <text class="nickname">{{nickName}}</text>
    <text class="mobile">{{mobile}}</text>
  </view>
  <view class='item_list'>
    <template is='item_list' data="{{url:'courses/index',icon:'../../image/ic_mine_course.png',style:'width:44rpx;height:39rpx',text:'我的课程'}}" />

    <template is='item_list' data="{{url:'collect/index',icon:'../../image/ic_mine_sc.png',style:'width:48rpx;height:41rpx',text:'我的收藏'}}" />

    <template is='item_list' data="{{url:'works/index',icon:'../../image/ic_wozuoping.png',style:'width:43rpx;height:41rpx',text:'我的作品'}}" />
  </view>
</view>