<template name="item_list">
  <view class="weui-cell__hd" style="margin:30rpx;">
    <image src="{{img}}" style="{{style}}"></image>
  </view>
  <view class="weui-cell__bd text">{{text}}</view>
  <image src="../../image/ic_jiantou.png" style="width:32rpx;height:32rpx;margin:30rpx;" class="weui-cell__ft" />
</template>

<view class="page">

  <view class="userinfo">
    <view class="left">
      <text class="nickname">{{userInfo.nickName}}</text>
      <block wx:if="{{isBindMobile===1}}">
        <text class="mobile">{{mobile}}</text>
      </block>
      <block wx:elif="{{isBindMobile===2}}">
        <text class="mobile" bindtap='bindAccount'>立刻去绑定</text>
      </block>
    </view>
    <image bindtap="bindViewTap" class="avatar" src="{{userInfo.avatarUrl}}" mode="cover" />
    <navigator url="message/index" hover-class="weui-cell_active">
      <block wx:if='{{hadMsg}}'>
        <image class='message' src='../../image/ic_had_message.png' />
      </block>
      <block else>
        <image class='message' src='../../image/ic_no_message.png' />
      </block>
    </navigator>
  </view>

  <navigator style='height:120rpx;' url="works/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <template is="item_list" data="{{text:'我的作品',img:'../../image/ic_wodezuopin.png',style:'width:41rpx;height:37rpx'}}" />
  </navigator>
  <navigator style='height:120rpx;' url="collect/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <template is="item_list" data="{{text:'我的收藏',img:'../../image/ic_wodeshouc.png',style:'width:42rpx;height:37rpx'}}" />
  </navigator>

  <navigator style='height:120rpx;' url="../aboutus/aboutus" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <template is="item_list" data="{{text:'关于我们',img:'../../image/ic_aboutus.png',style:'width:40rpx;height:40rpx'}}"/>
   </navigator>



</view>