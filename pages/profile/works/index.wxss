/* pages/profile/works/index.wxss */

.page {
  background-color: #f3f3f3;
}

.item {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  margin-bottom: 10rpx;
  align-items: center;
  position: relative;
}

.item .head {
  display: inline-flex;
  justify-content: space-between;
  width: 100%;
}

.item .head .content {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  padding: 15rpx 15rpx 15rpx 30rpx;
  color: #010101;
}

.item  .head .delete {
  width: 26rpx;
  height: 26rpx;
  padding: 25rpx;
}

.item .image {
  width: 690rpx;
  height: 414rpx;
  margin-bottom: 20rpx;
}

.item .mask{
  top:75rpx;
  left:28rpx;
  position: absolute;
  background: linear-gradient(#FFFFFF, #000000);
  opacity: 0.4;
  width: 690rpx;
  height: 414rpx;
}

.item .bottom {
  position: absolute;
  width: 690rpx;
  bottom: 20rpx;
  justify-content: space-between;
  display: inline-flex;
}

.item .bottom .left{
  display: inline-flex;
  padding: 18rpx;
  align-items: center;
}

.item .bottom .left image{
  width: 32rpx;
  height: 23rpx;
}

.item .bottom .left text{
  flex: 1;
  display: -webkit-box;
  word-break: break-all;
  justify-content: center;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-left: 10rpx;
  font-size: 27rpx;
  color: #FFBD2D;
}

.item .bottom .right {
  display: inline-flex;
  padding: 18rpx;
  align-items: center;
}

.item .bottom .right image{
  width: 33rpx;
  height: 30rpx;
}

.item .bottom .right text{
  flex: 1;
  display: -webkit-box;
  word-break: break-all;
  justify-content: center;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-left: 10rpx;
  font-size: 27rpx;
  color: #FEFEFE;
}
