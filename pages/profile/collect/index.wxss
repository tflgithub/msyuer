/* pages/profile/collect/index.wxss */
.grids {
  overflow: hidden;
  padding-left: 24rpx;
}

.grid {
  position: relative;
  float: left;
  margin-bottom: 20rpx;
  width: 50%;
}

.time{
  position: absolute;
  bottom: 70rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #fff
}

.grid-image {
  display: block;
  width: 341rpx;
  height: 210rpx;
  border-radius: 8rpx;
}

.grid-label {
  width: 80%;
  margin-top: 20rpx;
  display: block;
  text-align: center;
  color: #000;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}