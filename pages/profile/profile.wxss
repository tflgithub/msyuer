/* pages/profile/profile.wxss */

.userinfo {
  position: relative;
  display: flex;
  flex-direction: row;
  padding: 15rpx;
  justify-content: space-between;
  align-items: center;
  height: 234rpx;
  background-color: #ffe037;
}

.userinfo .message{
  position: absolute;
  top:0;
  right: 25rpx;
  width: 44rpx;
  padding: 15rpx;
  height: 44rpx
}

.userinfo .left {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-left: 40rpx;
  justify-content: flex-start;
}

.userinfo .avatar {
  width: 140rpx;
  height: 140rpx;
  margin-right: 90rpx;
  border-radius: 50%;
}

.userinfo .nickname {
  color: #2e2e2e;
  font-size: 38rpx;
  font-weight: bold;
}

.userinfo .mobile {
  color: #666;
  font-size: 30rpx;
}

.badyinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.babyinfo .img {
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
  margin-top: 30rpx;
}

.text {
  color: #444;
  font-size: 32rpx;
}

.line{
  height: 1rpx;
  color: #E3E3E3;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}