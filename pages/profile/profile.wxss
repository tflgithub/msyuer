/* pages/profile/profile.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: fixed;
  height: 270rpx;
  justify-content: center;
  background: linear-gradient(#FDD059, #DF8C2F);
  align-items: center;
  z-index: 99;
}

.userinfo image {
  width: 126rpx;
  height: 126rpx;
  align-items: center;
  border-radius: 50%;
}

.userinfo text {
  color: #FFFFFF;
  font-size: 40rpx;
}

.work{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  overflow:hidden;
  margin-left: 37rpx;
}

.item {
  width: 300rpx;
  height: 204rpx;
  white-space: nowrap;
  border-radius: 24rpx;
  background-color: #fff;
  margin: 20rpx;
  /* box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.2); */
}

.thump {
  width: 100%;
  height: 160rpx;
  border-radius: 24rpx;
  /* border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx; */
}

.content {
  font-size: 18rpx;
  color: #707174;
  padding: 0 10rpx 0 10rpx;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
}