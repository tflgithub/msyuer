<!--pages/profile/message/inddex.wxml-->
<import src="../../common/pageState/pageState.wxml" />
<template is="pageState" data="{{...pageState}}" />
<view class="page">
  <view class="layout_vertical" wx:for='{{items}}'>
    <view class="item-top">
      <view class="left">
        {{item.msgAuthor}}回复:{{item.msgContent}}
      </view>
      <image src="{{item.workUrls}}" class="right" />
    </view>
    <view class="item-bottom">
      {{item.msgCreateTime}}
    </view>
  </view>
</view>