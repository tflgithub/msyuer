.textarea {
  padding:20rpx 14rpx 20rpx 14rpx;
  color: #000000;
  font-size: 32rpx;
  width: 586rpx;
  height: 196rpx;
  background-color: #e8e8e8;
  border-radius: 8rpx;
}

.star-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
  margin-top:20rpx;
}

.add-image {
  height: 180rpx;
  width: 180rpx;
}

.image {
  height: 180rpx;
  width: 180rpx;
  border-radius: 4%;
}

.upload-image {
  float: left;
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 10rpx;
}

.delete-image {
  position: absolute;
  top: 0;
  right:0;
  width: 32rpx;
  height: 32rpx;
  padding: 15rpx;
}

.button {
  width: 606rpx;
