.info {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  color: #785127;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.haibao {
  text-align: center;
  position: relative;
}

.button {
  border-radius: 50rpx;
  position: absolute;
  width: 284rpx;
  bottom: 58rpx;
  font-size: 34rpx;
  background-color: #f9c343;
  opacity: 0.8;
  right: 233rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: bold;
}

