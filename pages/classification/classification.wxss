/* pages/classification/classification.wxss */

.no-courses {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f2f2f2;
}

.no-courses-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-courses .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.cell {
  display: flex;
  flex-direction: row;
}

.cell .item {
  display: flex;
  flex-direction: row;
  margin-right: 40rpx;
  align-items: center;
}

.teacher{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}

.teacher .text{
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.teacher .avatar {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
