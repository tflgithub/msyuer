<!--pages/classification/classification.wxml-->
<view class="page">
  <slideTab tList="{{categoryType}}" bind:changeCurrent="swichNav" currentTab="{{currentType}}">
    <swiper current="{{currentType}}" duration="300" bindchange="bindChange" style="height: {{windowHeight-35}}px;margin-top:35px;">
      <block>
        <swiper-item wx:for="{{list}}" wx:key="*this">
          <view class="no-courses" hidden="{{item.length ? true : false}}">
            <image src="../../image/ic_empty_sc.png" class="no-courses-img"></image>
            <view class="text">暂无课程</view>
          </view>
          <scroll-view scroll-y="true" class="order-list" scroll-with-animation="true" lower-threshold="1" bindscrolltolower="scrolltolower" style="height: {{windowHeight-35}}px;" hidden="{{item ? flase : true}}">
            <view wx:for="{{item}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
              <view class="weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" src="{{item.course.phoUrl}}" />
              </view>
              <view class="weui-media-box__bd_in-appmsg">
                <view class="weui-media-box__desc">{{item.course.title}}</view>
                <view class="teacher">
                    <image src="../../image/ic_logo.png" class="avatar" />
                    <view class="text">{{item.teacher.name}}</view>
                </view>
                <view class='cell'>
                  <view class='item'>
                    <image src="../../image/ic_readname.png" style="width:34rpx;height:34rpx" class="weui-media-box__info" />
                    <view class="weui-media-box__info">{{item.course.price}}</view>
                  </view>
                  <view class="item">
                    <image src="../../image/ic_like.png" style="width:34rpx;height:34rpx" class="weui-media-box__info" />
                    <view class="weui-media-box__info">{{item.course.learnNum}}</view>
                  </view>
                </view>
              </view>
            </view>
          </scroll-view>
        </swiper-item>
      </block>
    </swiper>
  </slideTab>
</view>