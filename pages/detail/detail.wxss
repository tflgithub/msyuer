/* pages/detail/detail.wxss */

.midlle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.midlle .cell {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.midlle .cell .item {
  display: flex;
  flex-direction: row;
  margin-right: 40rpx;
  align-items: center;
}

.time {
  position: absolute;
  bottom: 40rpx;
  left: 200rpx;
  color: #fff;
  font-size: 28rpx;
}

.cell {
  display: flex;
  flex-direction: row;
}

.cell .item {
  display: flex;
  flex-direction: row;
  margin-right: 40rpx;
  align-items: center;
}

video {
  width: 100%;
  height: 422rpx;
}

.cover {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin-top: 161rpx;
  justify-content: center;
  width: 100%;
  height: 422rpx;
}

.cover .desc {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.cover .desc .first {
  font-size: 26rpx;
  color: #f9d943;
}

.cover .desc .second {
  font-size: 26rpx;
  color: #fff;
}

.cover .btn {
  font-size: 32rpx;
  margin-top: 20rpx;
  width: 154rpx;
  background-color: #f9d943;
}

.play_icon {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin-top: 161rpx;
  margin-left: 325rpx;
  width: 100%;
  height: 422rpx;
}

.bottom-float {
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 36rpx;
  left: 153rpx;
  width: 444rpx;
  height: 96rpx;
  /*下面的是关键的设置100%显示*/
  background-size: 100% 100%;
}

.bottom-float .pf__image {
  text-align: center;
  width: 33.33333%;
  border-right:1rpx solid #666666;
}

.bottom-float .zp__image {
  text-align: center;
  width: 33.33333%;
  border-right:1rpx solid #666666; 
}

.modal-content{
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
}

.star-image {
  text-align: center;
  position: absolute;
  top: 24rpx;
  margin-left: 60rpx;
  margin-top: 40rpx;
  width: 48rpx;
  height: 48rpx;
}

.star-image .item {
  position: absolute;
  top: 24rpx;
  width: 48rpx;
  height: 48rpx;
}
