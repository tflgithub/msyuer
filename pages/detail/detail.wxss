/* pages/detail/detail.wxss */

.midlle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.midlle .cell {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.midlle .cell .item {
  display: flex;
  flex-direction: row;
  margin-right: 40rpx;
  align-items: center;
}

.time {
  float: right;
  position: absolute;
  bottom: 0;
  left: 0;
  margin-left: 220rpx;
  margin-bottom: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

.cell {
  display: flex;
  flex-direction: row;
}

.cell .item {
  display: flex;
  flex-direction: row;
  margin-right: 40rpx;
  align-items: center;
}

video {
  width: 100%;
  height: 422rpx;
}

.cover {
  position: absolute;
  justify-content: center;
  width: 100%;
  height: 100%;
  display: flex;
  bottom: 0;
  flex-direction: column;
}

.cover .desc {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.cover .desc .first {
  font-size: 26rpx;
  color: #f9d943;
}

.cover .desc .second {
  font-size: 26rpx;
  color: #fff;
}

.cover .btn {
  font-size: 32rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-top: 20rpx;
  background-color: #f9d943;
}