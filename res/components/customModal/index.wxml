<view class='mask' hidden='{{hideModal}}'>
  <view class='modal-content' style='height:{{height}};width:{{width}}'>
    <scroll-view scroll-y class='main-content'>
      <slot></slot>
    </scroll-view>
    <view class='modal-btn-wrapper'>
      <view class='cancel-btn' style='color:rgba(7,17,27,0.6)' bindtap='cancel'>{{left}}</view>
      <view class='confirm-btn' style='color:#13b5f5' bindtap='confirm'>{{right}}</view>
    </view>
  </view>
</view>