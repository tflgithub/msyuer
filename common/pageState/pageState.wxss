/* res/components/pageState/pageSate.wxss */

.page-state-center {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  height: 100%;
  width: 100%;
  background: #FFFFFF;
  z-index: 999;
}

.page-state-container {
  animation: fadein 2s 1 ease-out;
  height: 100%;
  width: 100%;
}

.icon {
  width: 109rpx;
  height: 82rpx;
}

.page-state-container~view {
  display: none;
}

.message {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 28rpx;
  color: #a0a0a0;
  text-align: center;
}

.retrybtn {
  font-size: 28rpx;
  background-color: #FFBE2D;
  color: #FFFFFF;
}

page {
  height: 100%;
  overflow-y: auto;
}
