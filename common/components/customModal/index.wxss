/* res/components/rating/index.wxss */

.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999999;
}

.modal-content {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-btn-wrapper {
  display: inline-flex;
  height: 100rpx;
  line-height: 100rpx;
}

.cancel-btn, .confirm-btn {
  width: 187rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius:6rpx;
  font-size: 29rpx;
  background-color: #FFBD2D;
}

.cancel-btn {
  border-right: 2rpx solid rgba(7, 17, 27, 0.1);
}

.main-content {
  flex: 1;
  height: 100%;
  overflow-y: hidden;
}
