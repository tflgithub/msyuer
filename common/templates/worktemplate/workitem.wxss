.item {
  width: 325rpx;
  height: 244rpx;
  white-space: nowrap;
  border-radius: 24rpx;
  background-color: #fff;
  margin: 20rpx 10rpx 20rpx 10rpx;
  /* box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.2); */
}

.thump {
  width: 325rpx;
  height: 190rpx;
  border-radius: 24rpx;
}

.content {
  font-size: 18rpx;
  color: #707174;
  padding: 0 10rpx 5rpx 10rpx;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
}

.user-info {
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
  align-items: center;
}

.user-info image {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
}

.user-info text {
  padding-left: 10rpx;
  font-size: 16rpx;
  color: #a5a5a5;
}
